command 'bar', 'no-help'

command 'described',
  script: 'described',
  flags: {
    f_dscrbd: { desc: "flag with description" }
  },
  parameters: {
    p_dscrbd: { desc: "mandatory with description" }
  }

command 'fmp',
  script: 'fmp',
  flags: {
    flagged: {}
  }

command 'foo',
  script: 'foo',
  usage: 'vagrant run %{command}',
  help: 'help message for foo'

command 'znk',
  script: 'znk',
  parameters: {
    frst: {},
    scnd: { optional: true }
  }

command 'unordered',
  script: 'unordered',
  flags: {
    flg: {}
  },
  parameters: {
    frst: { optional: true },
    scnd: {}
  }


chain 'chained', commands: [
  { command: 'foo' },
  { command: 'bar' }
]

chain 'chainhelp',
  commands: [{ command: 'foo' }],
  usage: 'vagrant run %{chain}',
  help: 'help message for chainhelp'


command_alias 'aliased',
  command: 'bar'

command_alias 'aliashelp',
  command: 'foo',
  help: 'help message for aliashelp'
