command 'hostname',
  machine: 'primary',
  script:  'hostname'

command 'doubleecho',
  machine:    'primary',
  parameters: { first: {}, second: {} },
  script:     'echo "[$(hostname) %{first} %{second}]"'


chain 'chainecho',
  commands: [
    { command: 'doubleecho', argv: ['--first="param"'] },
    { command: 'doubleecho' },
    { command: 'doubleecho', argv: ['--first="param"', '--second="param"'] },
  ]

chain 'chainmachine',
  commands: [
    { command: 'hostname', machine: 'primary' },
    { command: 'hostname', machine: 'secondary' }
  ]
